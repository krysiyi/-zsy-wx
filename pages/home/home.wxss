/* pages/home/home.wxss */
page{
  background-color: #efeff4;
}

.poster{
  width: 750rpx;
  height: 850rpx;
}
.poster image{
  width: 100%;
  height: 100%;
}
swiper{
  width: 750rpx;
  height: 750rpx;
  margin-top: 10px;
}
image{
  width: 100%;
  height: 100%;
}
.recommend{
  background-color: white;
}
.title{
  text-align: center;
}
.title .h1{
  font-size: 60rpx;
  margin-top: 15px;
  margin-bottom: 8px;
}
.title .p{
  font-size: 34rpx;
  margin-bottom: 12px;  
}
.scroll_box{
  width: 710rpx;
  height: 307rpx;
  overflow: hidden;
  padding: 20rpx;
  white-space: nowrap;
}
.item_list{
  background-color: pink;
  width: 340rpx;
  height: 200rpx;
  margin-right: 23rpx;
  display: inline-block;
}
.news{
  margin-top: 10px;
  background-color: white;
}
.news .title{
  border-bottom: 1px solid black;
  padding: 0 10px;
  display: flex;
  align-items: center;
  height: 100rpx;
  position: relative;
}
.news .title .img{
  width: 65rpx;
  height: 65rpx;
  background-color: pink;
  border-radius: 50%;
  margin-right: 5px;
}
.news .title text{
  font-size: 32rpx;
}
.news .title .kind{
  font-size: 28rpx;
  color: #8E8E93;
  position: absolute;
  right: 15px;
}
.news .desc{
  width: 750rpx;
  height: 480rpx;
  position: relative;
}
.news .desc text{
  width: 100%;
  text-align: center;
  position: absolute;
  bottom: 0;
  left: 0;
  color: white;
  font-size: 30px;
  font-weight: bold;
}
.item_book_text{
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}