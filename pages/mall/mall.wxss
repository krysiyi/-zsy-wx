/* pages/mall/mall.wxss */
page{
  background-color: white;
}
page .page__bd .weui-search-bar{
  background-color: white;
}
page .page__bd .weui-search-bar .weui-search-bar__form,
page .page__bd .weui-search-bar .weui-search-bar__label{
  background-color: #efeff4;
}
page .page__bd .weui-search-bar .weui-search-bar__cancel-btn{
  color: black;
  font-size: 34rpx;
}
page .search{
  padding-left: 30rpx;
  background-color: white;
  font-size: 34rpx;
}
page .search text{
  color: #ff4683;
  font-size: 30rpx;
}
page .search .list{
}
page .search .list view{
  margin-bottom: 15rpx;
  margin-right: 15rpx;
  font-size: 30rpx;
  padding: 15rpx 20rpx;
  display: inline-block;
  height: 50rpx;
  border: 2rpx solid black;
  border-radius: 60rpx;
}
page .search .history view{
  padding-right: 30rpx;
}
page .search .history view view {
display: flex;
border-bottom: 1px dashed #ced0dd;
justify-content: space-between;
align-items: center;
}
page .home{
  background-color: #efeff4;
}
swiper{
  width: 750rpx;
  height: 364rpx;
  margin-bottom: 10px;
}
image{
  width: 100%;
  height: 100%;
}
page .nav-wrapper{
  display: flex;
  justify-content: space-between;
  align-content: space-between;
  flex-wrap: wrap;
  width: 750rpx;
  height: 325rpx;
}
page .nav-wrapper .nav-item{
  background-color: white;
  width: 374rpx;
  height: 107rpx;
  display: flex;
  align-items: center;
}
page .nav-wrapper .nav-item image{
  margin-left: 50rpx;
  margin-right: 30rpx;
  width: 90rpx;
  height: 90rpx;
}
page .nav-wrapper .nav-item:nth-child(2n) image{
  width: 100rpx;
}
page .nav-wrapper .nav-item text{
  font-size: 27rpx;
}
page .new-product,page .popular-artist{
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-top: 10px;
  background-color: white;
  width: 710rpx;
}
page .new-product{height: 480rpx;}
page .new-product .title-wrapper,page .popular-artist .title-wrapper{
  height: 110rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.title-wrapper .pink{
  color: #ff4683;
}
page .new-product .title-wrapper .normal{
  font-size: 27rpx;
  color: #ced0dd;
}
page .new-product .new-product-list{
  display: flex;
  justify-content: space-between;
}
page .new-product .new-product-list .new-product-item .img{
  width: 220rpx;
  height: 220rpx;
}
page .new-product .new-product-list .new-product-item .title{
  width: 220rpx;
  height: 100rpx;
  white-space: nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
page .new-product .new-product-list .new-product-item .title text{
  width: 220rpx;
  height: 100rpx;
  
}
page .popular-artist{
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-top: 10px;
  background-color: white;
  width: 710rpx;
}
page .popular-artist .name{
  width: 750rpx;
  height: 240rpx;
  display: flex;
  overflow-y: hidden;
}
page .popular-artist .name .name-item{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx; 
  width: 180rpx;
  height: 240rpx;
}
page .popular-artist .name image{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
page .popular-artist .name .img{
  position: relative;
}
page .popular-artist .name .img .ac{
  width: 200rpx;
  height: 200rpx;
}
page .popular-artist .name .mohu{
  position: absolute;
  z-index: 99;
  top: 0;
  left: 0;
  width: 180rpx;
  height: 180rpx;
  background-color: rgba(255,255,255,0.5);
  border-radius: 50%;
}
page .popular-artist .text{
  color:  #ff4683;
  text-align: center;
}
.popular-artist-list{
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.popular-artist-list .product-item{
  margin-top: 15rpx;
  display: flex;
  flex-direction: column;
  width: 220rpx;
  height: 300rpx;
}
.popular-artist-list .product-item .title{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.popular-artist-list .img image{
  width: 220rpx;
  height: 220rpx;
}